<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home - Ekamers</title>
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.12.14/dist/full.min.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 text-gray-800 font-sans">
    <!-- Navbar -->
    <nav class="navbar bg-white shadow-md p-4">
      <div class="flex justify-between items-center w-full">
        <a href="/" class="text-2xl font-bold text-lime-600">Ekamers</a>
      </div>
      <div>
        <a href="/login" class="inline-block bg-lime-600 text-white hover:bg-lime-700 py-2 px-6 rounded-full text-sm font-semibold transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-lime-500 focus:ring-offset-2">Login</a>
      </div>
    </nav>

    <!-- Hero Section -->
    <div class="hero bg-lime-100 py-16">
      <div class="container mx-auto text-center">
        <h1 class="text-5xl font-bold text-lime-600 mb-4">Welcome to Ekamers!</h1>
        <p class="text-xl text-gray-700 mb-8">Discover amazing products made just for you.</p>
        <form action="/home" method="GET" class="flex justify-center">
          <input type="text" name="search" class="input input-bordered w-80 md:w-96 bg-white border-lime-600 text-lime-600 focus:ring-lime-500 transition-all duration-200" placeholder="Search products..." />
        </form>
      </div>
    </div>

    <!-- Products Section -->
    <div class="container mx-auto py-8">
      <h2 class="text-3xl font-semibold text-gray-800 mb-6 text-center">Available Products</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% products.slice(0, 3).forEach((product) => { %>
        <div class="card bg-white shadow-lg rounded-lg overflow-hidden hover:shadow-xl transition-all duration-300">
          <img src="<%= product.productImg || 'https://via.placeholder.com/150' %>" alt="<%= product.name %>" class="w-full h-56 object-cover rounded-t-lg" />
          <div class="p-6">
            <h3 class="text-xl font-semibold text-gray-800 mb-2 hover:text-lime-600 transition-all duration-200"><%= product.name %></h3>
            <p class="text-gray-600 text-sm mb-2">Stock: <%= product.stock %></p>
            <p class="text-gray-700 font-semibold mb-4 text-lg"><%= product.getRupiahFormat(product.price) %></p>
          </div>
        </div>
        <% }); %>
      </div>

      <!-- View More Button -->
      <% if (products.length > 3) { %>
      <div class="text-center mt-6">
        <p class="text-lg text-gray-600">...and many more products waiting for you.</p>
        <a href="/home" class="inline-block bg-lime-600 text-white hover:bg-lime-700 py-2 px-6 rounded-full text-sm font-semibold transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-lime-500 focus:ring-offset-2 mt-4">View All Products</a>
      </div>
      <% } %>
    </div>
  </body>
</html>
